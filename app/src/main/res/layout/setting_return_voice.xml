<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.qweri.phonenumbermanager.MainActivity" >
    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
        android:minHeight="?attr/actionBarSize">
    </android.support.v7.widget.Toolbar>
    
    <RadioGroup 
        android:id="@+id/radio_group"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">
        <RadioButton android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/single_item_height"
            android:text="暂时无法接通"
            android:textSize="@dimen/title_size"
            android:textColor="#bb333333"
            android:button="@drawable/abc_btn_radio_material"
            android:buttonTint="@color/main_color"
            />
        
        <RadioButton android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/single_item_height"
            android:text="号码是空号"
            android:textSize="@dimen/title_size"
            android:textColor="#bb333333"
            android:button="@drawable/abc_btn_radio_material"
            android:buttonTint="@color/main_color"
            />
        <RadioButton android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/single_item_height"
            android:text="直接挂断"
            android:textSize="@dimen/title_size"
            android:textColor="#bb333333"
            android:button="@drawable/abc_btn_radio_material"
            android:buttonTint="@color/main_color"
            />
        <RadioButton android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/single_item_height"
            android:text="默认"
            android:textSize="@dimen/title_size"
            android:textColor="#bb333333"
            android:button="@drawable/abc_btn_radio_material"
            android:buttonTint="@color/main_color"
            />
    </RadioGroup>

    

</LinearLayout>